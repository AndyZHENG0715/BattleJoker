<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>

<VBox prefHeight="894.0" prefWidth="748.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
    <MenuBar fx:id="menuBar" VBox.vgrow="NEVER">
        <Menu mnemonicParsing="false" text="Game">
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
            <MenuItem fx:id="mnuAbout" mnemonicParsing="false" text="About..." />
            <MenuItem fx:id="saveMenuItem" text="Save Game" visible="false"/>
            <MenuItem fx:id="loadMenuItem" text="Load Game" visible="false"/>
        </Menu>
    </MenuBar>
    <HBox style="-fx-background-color: #e0e0e0; -fx-padding: 10px;">
        <VBox spacing="10">
            <Label fx:id="nameLabel" text="Name" textAlignment="CENTER" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333;">
                <font>
                    <Font name="Impact" size="20.0" />
                </font>
            </Label>
            <Label fx:id="scoreLabel" textAlignment="CENTER" style="-fx-font-size: 16px;">Score: 0</Label>
            <Label fx:id="levelLabel" textAlignment="CENTER" style="-fx-font-size: 16px;">Level: 0</Label>
            <Label fx:id="comboLabel" textAlignment="CENTER" style="-fx-font-size: 16px;">Combo: 0</Label>
            <Label fx:id="moveCountLabel" textAlignment="CENTER" style="-fx-font-size: 16px;"># of Moves: 0</Label>
            <Label fx:id="timerLabel" textAlignment="CENTER" style="-fx-font-size: 16px;">Time: 0.00 s</Label>
            <Label fx:id="currentPlayerLabel" textAlignment="CENTER" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: red;">Current Player: --</Label>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
        <VBox spacing="10">
            <Button fx:id="goButton" text="Start Game!" visible="false" disable="true" style="-fx-font-size: 15px;">
                <font>
                    <Font size="15.0"/>
                </font>
            </Button>
            <Button fx:id="cancelButton" text="Cancel" visible="false" disable="true" focusTraversable="false" style="-fx-font-size: 15px;">
                <font>
                    <Font size="15.0"/>
                </font>
            </Button>
        </VBox>
        <VBox spacing="10">
            <TextArea fx:id="message" editable="false" prefWidth="410" prefHeight="200" focusTraversable="false" style="-fx-font-size: 14px; -fx-background-color: #fff; -fx-border-color: #ccc; -fx-border-radius: 5px; -fx-padding: 10px;">
            </TextArea>
        </VBox>
    </HBox>
    <BorderPane fx:id="boardPane">
        <center>
            <Pane style="-fx-background-color: #a88;" BorderPane.alignment="CENTER">
                <Canvas fx:id="canvas" />
            </Pane>
        </center>
    </BorderPane>
</VBox>